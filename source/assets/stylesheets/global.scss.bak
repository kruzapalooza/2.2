

header {
  position: fixed;
  background-color: #000000;
  opacity: 1; 
  top: 0;
  left: 0;
  width: 100%;
  height: 60px;
  z-index: 1000000;

  .logo {
    background-color: black;
    float: right;
  }

  nav {
    float: left;
    background-color: black;
  

    #main-nav > li {
      float: left;
      position: relative; 
      width: 150px;
      height: 60px;
      text-align: center;
      vertical-align: bottom;
    }
  
    li:before {
      position: absolute;
      left: 0px;
      background-color: #4A4031;   
      content: "";
      width: 1px;
      height: 100%;
      outline-style: dotted;
      outline-color: green;
    } 

    ul {
      height: 60px;
      margin: 0;
      padding: 0;
      list-style-type: none; 
    
      li {
        -webkit-transition: background-color 0.3s ease-in-out;
        -moz-transition: background-color 0.3s ease-in-out;
        -ms-transition: background-color 0.3s ease-in-out;
        -o-transition: background-color 0.3s ease-in-out;
      }

      li:hover {
        background-color: #000047; /* dark blue? */
        outline-style: dotted;
        outline-color: purple;
      }

      .dropdown {
        /* display: none; */
        position: absolute;
        margin-top: -9999px; 
        top: 60px;
        left: 0;
        width: 100%;
        opacity: 0; /* so menus aren't visible at first */
        transition: opacity 0.4s ease-in-out; 
      }

      .dropdown li:hover {
        background-color: #000047;
      }

      li a {
        display: block;
        padding: 8px 8px 8px 8px;
      }
    }

    li.has-dropdown:hover > ul.dropdown {
      margin-top: 0;  /* required for drop-down to initiate */ 
      opacity: 1;     /* make menu visible on mouse hover   */
    }

  }
}


