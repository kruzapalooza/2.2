.event {
  padding: 16px;
  display: inline-block;
  margin-right: 25px;

  :last-child {
    margin-right: 0;
  }

  .overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.6);
    top: 0;
    left: 0;
  }

  .overlay.right_to_left {
    top: 0;
    right: 0; /* start at RIGHT first now */
    width: 0;
    height: 350px;
    transition: width 0.5s ease-in-out;
  }

  .overlay.right_to_left {
    width: 100%;
  }

  .overlay.grow {
    top: 0;
    left: 0;
    width: 100%; /* set width maximum initially; gets changed via the 'translate' transform */
    height: 350px; /* set height maximum initially; gets changed via the 'translate' transform */
    transform: scale(0); /* make the overlay dimensionless (width and height to 0) by scaling to 0... means essentialy width * 0, which = 0, and height * 0, which is also 0 */
    transition: transform 0.5s ease-in-out; /* transition the transform! */
  }

  .overlay.left_to_right {
    top: 0;
    left: 0;
    width: 0;
    height: 100%;
    transition: width 0.5s ease-in-out; 
  }
}


